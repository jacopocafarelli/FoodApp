<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_drawer_divider_height"
        android:background="@color/aluminium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_nav_drawer_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/navigation_drawer_subitem_padding_top_bottom"
        android:paddingLeft="@dimen/navigation_drawer_padding_left"
        android:paddingRight="@dimen/navigation_drawer_padding_right"
        android:paddingTop="@dimen/navigation_drawer_subitem_padding_top_bottom">

        <com.foodapp.app.views.TypefaceTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FIRST COURSES"
            android:textColor="@color/carbon"
            android:textSize="@dimen/navigation_drawer_subitem_text_size"
            custom:fontFamily="@string/font_family_roboto"
            custom:fontStyle="@string/font_style_light" />

        <com.foodapp.app.views.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/navigation_drawer_subitem_margin_right"
            android:text="3"
            android:textColor="@color/bloody_mary"
            android:textSize="@dimen/navigation_drawer_subitem_text_size"
            custom:fontFamily="@string/font_family_roboto"
            custom:fontStyle="@string/font_style_regular" />

        <ImageView
            android:layout_width="@dimen/navigation_drawer_settings_icon_width_height"
            android:layout_height="@dimen/navigation_drawer_settings_icon_width_height"
            android:background="@color/carbon" />

    </LinearLayout>
</LinearLayout>